{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "rootDir": ".",
    "mapRoot": "",
    "outDir": "./dist",
    "skipLibCheck": true,
    "lib": ["es6", "es2015", "dom"],
    "noImplicitAny": true,
    "baseUrl": ""
  },

  "typeRoots": [
      "../../node_modules/@types"
  ],

  "angularCompilerOptions": {
    "genDir": "./app/ngfactory",
    "entryModule": "app/app.module#AppModule",
    "debug": true
  }
}