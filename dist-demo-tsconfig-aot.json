{
  "compilerOptions": {
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "outDir": "./dist/demo",
    "rootDir": "./dist/demo",
    "skipLibCheck": true,
    "lib": ["es6", "es2015", "dom"],
    "noImplicitAny": false,
    "baseUrl": "",
    "paths": {
      "unopinionated-angular-toolbox": [
        "./dist/lib"
      ]
    }
  },
  "typeRoots": [
      "./node_modules/@types"
  ],

  "exclude": [
    "**/*.spec.ts",
    "./e2e/*.*",
    "./node_modules/**/*.*",
    "./src/**/*.*"
  ],

  "angularCompilerOptions": {
    "genDir": "./dist/demo",
    "skipMetadataEmit" : true
  }
}